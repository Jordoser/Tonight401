<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.parse.ParseImageView
        android:id="@+id/comment_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"/>

    <TextView
        android:id="@+id/user_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_image"
        android:text="User: "/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_string"
        android:layout_below="@id/comment_image"/>

    <TextView
        android:id="@+id/post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"/>

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_time"/>

    <TextView
        android:id="@+id/likes_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_text"
        android:text="Likes: "/>

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_text"
        android:layout_toRightOf="@id/likes_string" />

    <ImageButton
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:id="@+id/likeButton2"
        android:background="@drawable/up_arrow"
        android:layout_below="@+id/likes_string"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <ImageButton
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:id="@+id/dislikeButton2"
        android:background="@drawable/down_arrow"
        android:layout_alignTop="@+id/likeButton2"
        android:layout_toRightOf="@+id/likeButton2"
        android:layout_toEndOf="@+id/likeButton2" />

</RelativeLayout>