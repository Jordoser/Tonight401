<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <com.parse.ParseImageView
        android:id="@+id/comment_image_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"/>

    <TextView
        android:id="@+id/user_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:paddingRight="5dp"
        android:paddingLeft="2dp"
        android:layout_below="@id/comment_image_main"/>

    <TextView
        android:id="@+id/post_time_main"
        android:layout_width="wrap_content"
        android:textColor="#50000000"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_alignParentRight ="true"/>

    <TextView
        android:id="@+id/comment_text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize ="18dp"
        android:paddingTop="2.5dp"
        android:paddingBottom="2.5dp"
        android:paddingLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/post_time_main"/>

    <TextView
        android:id="@+id/likes_string_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#50000000"
        android:layout_below="@id/comment_text_main"
        android:layout_centerHorizontal="true"
        android:text="Likes: "/>

    <TextView
        android:id="@+id/likes_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#50000000"
        android:layout_below="@id/comment_text_main"
        android:layout_toRightOf="@id/likes_string_main" />

    <TextView
        android:id="@+id/bar_name_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#50000000"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/likes_string_main"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="20dip"
            android:layout_height="15dip"
            android:id="@+id/likeButton"
            android:background="@drawable/up_arrow"
            android:gravity="center"/>
        <ImageButton
            android:layout_width="20dip"
            android:layout_height="15dip"
            android:id="@+id/dislikeButton"
            android:background="@drawable/down_arrow"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>